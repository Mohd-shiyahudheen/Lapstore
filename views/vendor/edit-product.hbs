<header>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</header>

<body>
    <section class="vh">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-2">Edit Products</p>

                                    <form class="mx-1 mx-md-4" action="/vendor/edit/{{response._id}}" method="post"
                                        enctype="multipart/form-data">

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example1c">product Name</label>
                                                <input type="text" value="{{response.productname}}" name="productname"
                                                    id="form3Example1c" class="form-control" />
                                            </div>
                                        </div>

                                        <div class=" mb-3">
                                            <label for="exampleInputPassword1" class="form-label">Brands</label>
                                            <select name="brandname" class="form-control">
                                                <option value="{{response.brandname.brandname}}" selected>
                                                    {{response.brandname.brandname}}</option>
                                                {{#each brands}}

                                                <option value="{{this.brandname}}">{{this.brandname}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example4c">Color</label>
                                                <input type="text" name="color" id="form3Example4c"
                                                    value="{{response.color}}" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example4cd">price</label>
                                                <input type="number" name="price" value="{{response.price}}"
                                                    id="form3Example4cd" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example4cd">oldprice</label>
                                                <input type="number" name="oldprice" value="{{response.oldprice}}"
                                                    id="form3Example4cd" class="form-control" />
                                            </div>
                                        </div>


                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example4cd">Description</label>
                                                <input type="number" name="description" value="{{response.description}}"
                                                    id="form3Example4cd" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example4cd">image</label>
                                                <img style="width: 50px; height:50px"
                                                    src="/images/{{response.image.[0].first}}" alt="" class="mb-2">
                                                {{!-- <input class="form-control form-control-sm" id="formFileSm"
                                                    type="file" name="image1" value="" onchange="viewimage(event)"> --}}
                                                <input type="file" name="image1" id="image1" class="form-control "
                                                    value="{{response.image.[0].first}}" />

                                                <input type="file" name="image2" id="image2" class="form-control mt-5"
                                                    value="{{response.image.[0].second}}" />
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <button type="submit" class="btn btn-primary btn-lg">Add</button>
                                        </div>
                                    </form>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>

</body>


<script src="vendor/jquery/jquery.min.js"></script>
