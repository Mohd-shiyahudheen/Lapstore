<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.0/css/jquery.dataTables.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.12.0/js/jquery.dataTables.js"></script>
</head>

<body>
    <div class="container">
        <table id="orderTable" class="display">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Date</th>
                    <th>Shiiping Address</th>
                    <th>Status</th>
                    <th>Payment</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Products</th>
                </tr>
            </thead>
            <tbody>
                {{#each orderDt}}
                <tr>
                    <td>{{@index}}</td>
                    <td><span style="font-size:small">{{this.OrderPlacedAt}}</span></td>
                    <td>
                        <span style="font-size:small">{{this.first_name}}{{this.last_name}},
                            {{this.country}},
                            {{this.state}},
                            {{this.city}},
                            {{this.pincode}},
                            {{this.address}},
                           
                        </span>
                    </td>
                    <td><span style="font-size:small">{{this.OrderStatus}}</span></td>
                    <td><span style="font-size:small">{{this.paymentMethod}}</span></td>
                    <td><span style="font-size:small">{{this.phone}}</span></td>
                    <td><span style="font-size:small">{{this.totalAmount}}</span></td>
                    {{#each this.productDt}}
                    <td>
                        <img style="width: 50px; height:50px" src="/images/{{this.image.[0].first}}" alt="">
                    </td>
                    {{/each}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>

<script>
    $(document).ready(function () {
        $('#orderTable').DataTable();
    }); 
</script>

</html>